<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#313338">


    <ImageButton
        android:id="@+id/backButtonSignUpStudent"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="backButton"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backbutton"/>

    <ImageButton
        android:id="@+id/signUpStudent"
        android:layout_width="129dp"
        android:layout_height="120dp"
        android:layout_marginBottom="72dp"
        android:background="@android:color/transparent"
        android:contentDescription="diamondSignUp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/submit" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="241dp"
        android:layout_height="112dp"
        android:layout_marginBottom="76dp"
        android:background="@android:color/transparent"
        android:contentDescription="line and dot"
        android:rotation="180"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toEndOf="@+id/signUpStudent"
        app:srcCompat="@drawable/linedot" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="230dp"
        android:layout_height="116dp"
        android:layout_marginBottom="76dp"
        android:background="@android:color/transparent"
        android:contentDescription="line and dot"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/signUpStudent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/linedot" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="287dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:gravity="center"
        android:text="Register Student"
        android:textColor="#FFFFFF"
        android:textSize="29dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.312"
        app:layout_constraintStart_toEndOf="@+id/backButtonSignUpStudent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/getNameStudent"
        android:layout_width="249dp"
        android:layout_height="56dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/et_res"
        android:ems="10"
        android:gravity="center"
        android:hint="Name"
        android:inputType="text"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/getMatricNumber"
        android:layout_width="249dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/et_res"
        android:ems="10"
        android:gravity="center"
        android:hint="Matric Number"
        android:inputType="text"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getNameStudent" />

    <EditText
        android:id="@+id/getICNumberStudent"
        android:layout_width="249dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/et_res"
        android:ems="10"
        android:gravity="center"
        android:hint="IC Number"
        android:inputType="number"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getMatricNumber" />

    <EditText
        android:id="@+id/getEmailStudent"
        android:layout_width="249dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/et_res"
        android:ems="10"
        android:gravity="center"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getICNumberStudent" />

    <EditText
        android:id="@+id/getPasswordStudent"
        android:layout_width="249dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/et_res"
        android:ems="10"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getEmailStudent" />

    <Spinner
        android:id="@+id/dropBox"
        android:layout_width="253dp"
        android:layout_height="78dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/et_res"
        android:ems="10"
        android:gravity="center"
        android:hint="Department"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getPasswordStudent" />

    <Spinner
        android:id="@+id/dropBoxRole"
        android:layout_width="249dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/et_res"
        android:ems="10"
        android:gravity="center"
        android:hint="Department"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dropBox" />

</androidx.constraintlayout.widget.ConstraintLayout>